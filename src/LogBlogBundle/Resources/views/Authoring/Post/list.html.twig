{# /Homepage/homepage.html.twig #}
{# Post List for logged in authors #}
{% extends '@LogBlog/layout.html.twig' %}

{% block page_content %}
    <h2>Posts</h2>
    {% for p in post_pager %}
        {% if loop.first %}
            {{ knp_pagination_render(post_pager) }}
        {% endif %}
        <article>
            <header>
                <a href="{{ path('log_blog_authoring_post_view', { 'postId': p.id }) }}">
                    {{ p.title }}
                </a>
            </header>
            <div>
                {{ p.content | nl2br }}
            </div>
        </article>
        {% if loop.last %}
            {{ knp_pagination_render(post_pager) }}
        {% endif %}
    {% else %}
        <div>Nothing here. :(</div>
    {% endfor %}
{% endblock %}