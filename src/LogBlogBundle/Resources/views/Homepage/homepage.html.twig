{# Homepage #}
{% extends '@LogBlog/layout.html.twig' %}
{% block page_content %}
    <h2>Startseite!</h2>

    {% for p in post_pager %}
        {% if loop.first %}
            {{ knp_paginator_render(post_pager) }}
        {% endif %}
        <article>
            <header>{{ p.title }}</header>
            <div>
                {{ p.content | nl2br }}
            </div>
            <footer>Ver√∂ffentlicht am: {{ p.publishedAt | date }} von {{ p.author }}</footer>
        </article>
        {% if loop.last %}
            {{ knp_paginator_render(post_pager) }}
        {% endif %}
    {% else %}
        <div>Nothing here. :(</div>
    {% endfor %}
{% endblock %}