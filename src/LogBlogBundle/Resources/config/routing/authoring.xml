<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="log_blog_authoring_post_list" path="/authoring/posts/list">
        <default key="_controller">LogBlogBundle:Authoring/PostList:list</default>
    </route>
    <route id="log_blog_authoring_post_view" path="/authoring/posts/view/:postId">
        <default key="_controller">LogBlogBundle:Authoring/PostView:view</default>
    </route>
    <route id="log_blog_authoring_post_write" path="/authoring/posts/write">
        <default key="_controller">LogBlogBundle:Authoring/PostWrite:new</default>
    </route>
    <route id="log_blog_authoring_post_write" path="/authoring/posts/write/:postId">
        <default key="_controller">LogBlogBundle:Authoring/PostWrite:edit</default>
    </route>
</routes>
